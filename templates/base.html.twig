<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}

        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <!-- Bootstrap core CSS -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
        <!-- Material Design Bootstrap -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.10/css/mdb.min.css" rel="stylesheet">
        
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    </head>
    <body>
        <nav   class="navbar navbar-expand-lg navbar-light bg-white" style="z-index:2000; position:fixed;  
  top:0%; width:100%">
        <a class="navbar-brand" href={{path('home')}}><strong>Cars4Sale</strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link"  href={{path('home')}}>Annonces <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href={{path('annonce_create')}}>Créer une annonce</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('security_registration')}}">S'inscrire</a>
            </li>
            {% if not app.user %}
            <li class="nav-item">
                <a class="nav-link" href="{{path('security_login')}}">Connexion</a>
            </li>
            {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{path('security_logout')}}">Déconnexion</a>
            </li>
            {% endif %}
            </ul>
            {# <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button> #}
            </form>
        </div>
        </nav>
        <div class="container pt-4 mt-5"  style="z-index:0;">
                {% block body %}{% endblock %}
        </div>


        <!-- Footer -->
        <footer class="page-footer font-small white lighten-2" style="border-top:solid 1px black; padding-bottom:20px;">

        <!-- Footer Elements -->
        <div class="container">

            <!-- Grid row-->
            <div class="row">

            <!-- Grid column -->
            <div class="col-md-12 py-5">
                <div class="mb-5 flex-center">

                <!-- Facebook -->
                <a class="fb-ic">
                    <i class="fab fa-facebook-f fa-lg grey-text mr-md-5 mr-3 fa-2x"> </i>
                </a>
                <!-- Twitter -->
                <a class="tw-ic">
                    <i class="fab fa-twitter fa-lg grey-text mr-md-5 mr-3 fa-2x"> </i>
                </a>
                <!-- Google +-->
                <a class="gplus-ic">
                    <i class="fab fa-google-plus-g fa-lg grey-text mr-md-5 mr-3 fa-2x"> </i>
                </a>
                <!--Linkedin -->
                <a class="li-ic">
                    <i class="fab fa-linkedin-in fa-lg grey-text mr-md-5 mr-3 fa-2x"> </i>
                </a>
                <!--Instagram-->
                <a class="ins-ic">
                    <i class="fab fa-instagram fa-lg grey-text mr-md-5 mr-3 fa-2x"> </i>
                </a>
                <!--Pinterest-->
                <a class="pin-ic">
                    <i class="fab fa-pinterest fa-lg grey-text fa-2x"> </i>
                </a>
                </div>
            </div>
            <!-- Grid column -->

            </div>
            <!-- Grid row-->

        </div>
        <!-- Footer Elements -->

        <!-- Copyright -->
        <div class="footer-copyright text-center black lighten-2 py-3"
         style="color:white; z-index:2000; position:fixed;  
  top:94%;  width:100% ">
         © 2020 Copyright:
            <a href="https://mdbootstrap.com/education/bootstrap/"><strong>Cars4Sale</a></strong>
        </div>
        <!-- Copyright -->

        </footer>
        <!-- Footer -->




        {% block javascripts %}{% endblock %}
        <!-- JQuery -->

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.10/js/mdb.min.js"></script>
     {# <script src="https://kit.fontawesome.com/a076d05399.js"></script> #}
    </body>
</html>
